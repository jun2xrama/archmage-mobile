{% extends "ArchmageAdminBundle::layout.html.twig" %}

{% block stylesheets_custom %}
<!-- Custom styles for this template -->
<style type="text/css">
    .container {width: 400px;}
</style>
{% endblock stylesheets_custom %}

{% block body %}
<div class="container">
    <form action="{{ path('login_check') }}" method="POST" role="form">
        <input type="hidden" name="_target_path" value="{{ target_path }}" />
    {% if error %}
        <div class="alert alert-danger">
            <strong>{{ 'Error'|trans }}</strong>
        {% if error.message %}
            {{ error.message|trans }}
        {% else %}
            {{ error|trans }}
        {% endif %}
        </div>
    {% endif %}
        <h2 class="form-signin-heading">{{ 'Please sign in'|trans }}</h2>
        <div class="form-group">
            <label for="_username">Username</label>
            <input type="text" name="_username" id="_username" value="{{ last_username }}" class="form-control input-lg" placeholder="{{ 'Username'|trans }}" autofocus>
        </div>
        <div class="form-group">
            <label for="_password">Password</label>
            <input type="password" name="_password" id="_password" class="form-control input-lg" placeholder="{{ 'Password'|trans }}">
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" name="_remember_me"> {{ 'Remember me'|trans }}
            </label>        
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'Sign in'|trans }}</button>
    </form>

</div> <!-- /container -->
{% endblock body %}